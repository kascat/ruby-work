<h1><%= t('listing', name: t('list.title', count: 2)) %></h1>

<table class="table table-striped table-hover table-sm">
 <thead>
   <tr>
     <th scope="col"><%= t('list.title') %></th>
     <th scope="col"><%= t('list.description') %></th>
     <th scope="col"><%= t('list.bought') %></th>
     <th scope="col"><%= t('actions') %></th>
   </tr>
 </thead>

 <tbody>
   <% @lists.each do |list| %>
     <tr>
       <td><%= list.title %></td>
       <td><%= list.description %></td>
       <td><%= list.bought %></td>
<td>
<div class="btn-group btn-group-sm" role="group">
  <%= link_to t('show'), list, class: 'btn btn-info', role: :button %>
  <%= link_to t('edit'), edit_list_path(list), class: 'btn btn-success', role: :button %>
  <%= link_to t('destroy'), list, method: :delete, data: { confirm: t('confirm_destroy') }, class: 'btn btn-danger', role: :button %>
</div>
</td>
</tr>
<% end %>
</tbody>
</table>

<br>

<%= link_to t('new', name: t('list.title', count: 1)), new_list_path, class: 'btn btn-primary', role: :button %>
