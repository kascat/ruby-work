<h1>Visualização</h1>

<table class="table table-striped table-hover">

 <tr>
   <th scope="row">Nome da lista</th>
   <td><%= @list.title %></td>
 </tr>
 <tr>
   <th scope="row">Descrição:</th>
   <td><%= @list.description %></td>
 </tr>
 <tr>
   <th scope="row">Comprada</th>
   <td><%= @list.bought ? 'Sim' : 'Não' %></td>
 </tr>

</table>

<%= link_to 'Editar', edit_list_path(@list), class: 'btn btn-primary', role: :button %>
<%= link_to 'Voltar', root_path, class: 'btn btn-outline-secondary', role: :button %>
